<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<welcome-file-list>
		<welcome-file>SignInSignUpForms.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Servlet1</servlet-name>
		<servlet-class>com.tadigital.ecommerce.controller.LoginProcessControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Servlet1</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Servlet2</servlet-name>
		<servlet-class>com.tadigital.ecommerce.controller.RegistrationProcessControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Servlet2</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Servlet3</servlet-name>
		<servlet-class>com.tadigital.ecommerce.controller.MobilePageControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Servlet3</servlet-name>
		<url-pattern>/Mobiles</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Servlet4</servlet-name>
		<servlet-class>com.tadigital.ecommerce.controller.LogoutPageControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Servlet4</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Servlet5</servlet-name>
		<servlet-class>com.tadigital.ecommerce.controller.WelcomePageControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Servlet5</servlet-name>
		<url-pattern>/Home</url-pattern>
	</servlet-mapping>


	<display-name>Archetype Created Web Application</display-name>
</web-app>
